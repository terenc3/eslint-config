# EditorConfig is awesome: http://EditorConfig.org
# Taken from https://terenc3.github.io/editorconfig/

# top-most EditorConfig file
root = true

############ Common ############
[*]
charset = utf-8
# Unix-style newlines
end_of_line = lf
# Newline ending every file
insert_final_newline = true
# Use space as indention
indent_style = space
# Indent with 4 characters
indent_size = 4
# remove used spaces at end of lines
trim_trailing_whitespace = true

############ Files by extension ############

# NPM https://nodejs.org/en/
# generated by cli
[package.json]
indent_size = 2
indent_style = space
